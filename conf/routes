# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                          autopos.web.HomeController.index

# Account
GET           /api/account               autopos.auth.web.AccountApi.getAccount(username = "chuck")

# Brands
GET           /api/brands                autopos.item.web.BrandApi.getBrands
POST          /api/brands                autopos.item.web.BrandApi.addBrand
GET           /api/brands/:id            autopos.item.web.BrandApi.getBrand(id: Int)
PUT           /api/brands/:id            autopos.item.web.BrandApi.updateBrand(id: Int)
DELETE        /api/brands/:id            autopos.item.web.BrandApi.deleteBrand(id: Int)

# Categories
GET           /api/categories            autopos.item.web.CategoryApi.getCategories
POST          /api/categories            autopos.item.web.CategoryApi.addCategory
GET           /api/categories/:id        autopos.item.web.CategoryApi.getCategory(id:Int)
PUT           /api/categories/:id        autopos.item.web.CategoryApi.updateCategory(id: Int)
DELETE        /api/categories/:id        autopos.item.web.CategoryApi.deleteCategory(id: Int)

# Tags
GET           /api/tags                  autopos.item.web.TagApi.getTags
POST          /api/tags                  autopos.item.web.TagApi.addTag
GET           /api/tags/:id              autopos.item.web.TagApi.getTag(id: Int)
PUT           /api/tags/:id              autopos.item.web.TagApi.updateTag(id: Int)
DELETE        /api/tags/:id              autopos.item.web.TagApi.deleteTag(id: Int)

# Items
GET           /api/items                 autopos.item.web.ItemApi.getItems(page:Int ?= 1, size:Int ?= 20)
POST          /api/items                 autopos.item.web.ItemApi.addItem
GET           /api/items/:id             autopos.item.web.ItemApi.getItem(id: Int)
PUT           /api/items/:id             autopos.item.web.ItemApi.updateItem(id: Int)
DELETE        /api/items/:id             autopos.item.web.ItemApi.deleteItem(id: Int)

