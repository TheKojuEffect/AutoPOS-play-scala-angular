# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Assets.at(path="/public", file= "index.html")

# JavaScript routes object
GET           /jsroutes.js         controllers.Application.jsRoutes()


# Brands
GET           /brands              autopos.item.web.BrandApi.getBrands
POST          /brands              autopos.item.web.BrandApi.addBrand


# Authentication
POST          /authenticate        autopos.auth.web.AuthApi.authenticate
POST          /logout              controllers.Application.logout()

# Account
GET           /account             autopos.auth.web.AccountApi.getAccount(username = "chuck")

# Users
GET           /users/:id           autopos.user.web.UserApi.getUser(id: Int)
POST          /users               controllers.Users.createUser()
PUT           /users/:id           controllers.Users.updateUser(id: Long)
DELETE        /users/:id           controllers.Users.deleteUser(id: Long)
GET           /authuser            controllers.Users.authUser()

# Static
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
GET           /*file               controllers.Assets.versioned(path="/public", file: Asset)